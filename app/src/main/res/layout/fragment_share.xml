<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ShareFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share yours!"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_poppins"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add some photos"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_poppins"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/btn_uploadImg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/upload_picture" />

                    <ImageView
                        android:id="@+id/btn_uploadImg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/upload_picture" />
                    <ImageView
                        android:id="@+id/btn_uploadImg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/upload_picture" />

                    <ImageView
                        android:id="@+id/btn_uploadImg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/upload_picture" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:text="Choose a category"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_poppins"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_listingDressCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_lightgrey_bg">

                    <ImageView
                        android:id="@+id/dressCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_dress_icon"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dressCategory"
                        android:layout_marginBottom="5dp"
                        android:text="Dress"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_poppins"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingTeesCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_lightgrey_bg">

                    <ImageView
                        android:id="@+id/teesCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_tees_icon"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/teesCategory"
                        android:layout_marginBottom="5dp"
                        android:text="Tees"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_poppins"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingBottomsCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_lightgrey_bg">

                    <ImageView
                        android:id="@+id/bottomsCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_bottoms_icon"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bottomsCategory"
                        android:layout_marginBottom="5dp"
                        android:text="Bottoms"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_poppins"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingShirtsCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_lightgrey_bg">

                    <ImageView
                        android:id="@+id/shirtsCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_shirts_icon"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/shirtsCategory"
                        android:layout_marginBottom="5dp"
                        android:text="Shirts"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_poppins"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingSuitsCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_lightgrey_bg">

                    <ImageView
                        android:id="@+id/suitsCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_suits_icon"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/suitsCategory"
                        android:layout_marginBottom="5dp"
                        android:text="Suits"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular_poppins"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_listingJacketCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_lightgrey_bg"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/jacketCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_jacket_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jacketCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/regular_poppins"
                        android:text="Jacket"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingPoloCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_lightgrey_bg"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/poloCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_polo_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/poloCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/regular_poppins"
                        android:text="Polo-T"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingOfficeCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_lightgrey_bg"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/officeCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_office_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/officeCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/regular_poppins"
                        android:text="Office"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingSeasonCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_lightgrey_bg"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/seasonCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_season_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/seasonCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/regular_poppins"
                        android:text="Season"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_listingOthersCategory"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_lightgrey_bg"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/othersCategory"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/item_others_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/othersCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/regular_poppins"
                        android:text="Others"
                        android:textColor="@color/black" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listing Title"
                android:textColor="@color/black"
                android:fontFamily="@font/regular_poppins"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name your item"
                android:textColorHint="@color/hint"
                android:background="@drawable/rounded_lightgrey_bg"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item's Size"
                android:textColor="@color/black"
                android:fontFamily="@font/regular_poppins"
                android:textSize="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sizeXS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="XS"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sizeS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="S"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sizeM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="M"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sizeL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="L"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sizeXL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="XL"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_size2XL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="2XL"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_size3XL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="3XL"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_size4XL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="4XL"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/light_grey"
                    app:cornerRadius="10dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occassion"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/regular_poppins"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"

                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_occassionEveryday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text="Everyday"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        android:fontFamily="@font/bold_poppins"
                        app:backgroundTint="@color/light_grey"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_occassionOfficeWear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text="Office"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        android:fontFamily="@font/bold_poppins"
                        app:backgroundTint="@color/light_grey"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_occassionFormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text="Formal"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        android:fontFamily="@font/bold_poppins"
                        app:backgroundTint="@color/light_grey"
                        app:cornerRadius="10dp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_occassionNightOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text="Night Out"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        android:fontFamily="@font/bold_poppins"
                        app:backgroundTint="@color/light_grey"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_occassionWedding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text="Wedding"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        android:fontFamily="@font/bold_poppins"
                        app:backgroundTint="@color/light_grey"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_occassionWeekends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text="Weekends"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:padding="10dp"
                        android:fontFamily="@font/bold_poppins"
                        app:backgroundTint="@color/light_grey"
                        app:cornerRadius="10dp" />



                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/regular_poppins"
                android:text="Colour"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/color_option"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/regular_poppins"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/shareItem_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/share_description_msg"
                android:textColorHint="@color/hint"
                android:background="@drawable/rounded_lightgrey_bg"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:singleLine="false"
                android:inputType="textMultiLine"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="Send for verification in advance?"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_poppins"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textMultiLine"
                android:text="Verified listings will be labelled and they tend to be more trusted as they help assure renters that they are paying for genuine products."
                android:textSize="15dp"
                android:textColor="@color/hint"
                android:textStyle="italic"
                android:fontFamily="@font/regular_poppins"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textMultiLine"
                android:text="Verified listings are entitled to a free storing at our warehouse. We keep your item until someone rents it. In the mean time, we’ll take care for you."
                android:textSize="15dp"
                android:textColor="@color/hint"
                android:textStyle="italic"
                android:fontFamily="@font/regular_poppins"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_trueVerifyShareListing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="Verify"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:fontFamily="@font/bold_poppins"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="30dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_falseVerifyShareListing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="No need"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:fontFamily="@font/bold_poppins"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="30dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_listItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
