<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_listing"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_white_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgView_item"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:padding="7dp"
                android:src="@drawable/giorgio_armani"
                android:layout_gravity="center_horizontal"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgView_item"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txtView_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giorgio Armani"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:textSize="15sp"
                    android:fontFamily="@font/bold_poppins"/>

                <TextView
                    android:id="@+id/txtView_itemDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="Plaid Double Breasted Jacket"
                    android:fontFamily="@font/regular_poppins"/>

                <TextView
                    android:id="@+id/txtView_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVAILABLE"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#295C00"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/regular_poppins"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>