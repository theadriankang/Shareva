<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cv_watch"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rel_watch"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="290dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgView_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/giorgio_armani"
                android:layout_gravity="center_horizontal"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txtView_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giorgio Armani"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/txtView_itemDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Plaid Double Breasted Jacket"/>

                <TextView
                    android:id="@+id/txtView_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVAILABLE"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#295C00"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>